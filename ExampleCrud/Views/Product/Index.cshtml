@using ExampleCrud.Models
@model List<Product>

@{
    ViewData["Title"] = "Productos";
}

<div class="text-center">

    <h1 class="display-4">Productos</h1>
    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Crear</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Acción</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count> 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Eliminar</a></td>
                        
                    </tr>
                }
            }
       
      
           
           
        </tbody>
    </table>
</div>
